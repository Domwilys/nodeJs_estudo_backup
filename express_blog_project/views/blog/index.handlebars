<hr>

<h2 class="mb-5">Recent Posts:</h2>

<div class="container">
	<div class="row">
{{#each postagem}}
	<div class="col-md-8">
			<div class="media g-mb-30 media-comment">
				<div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
					<div class="g-mb-15">
						<h5 class="h5 g-color-gray-dark-v1 mb-3">{{title}}</h5>
						<span class="g-color-gray-dark-v4 g-font-size-12">Posted by: {{postedBy.name}}</span><br>
						<span class="g-color-gray-dark-v4 g-font-size-12">Created at: {{date}}</span><br>
						<span class="g-color-gray-dark-v4 g-font-size-12">Category: {{category.name}}</span><br>
						<small class="text-truncate">{{description}}</small>
					</div>
					<p class="post-content mt-5 w-xl text-truncate">{{content}}</p>
				</div>
			</div>
			<a href="/post/{{_id}}"><button type="button" class="btn btn-outline-secondary mb-5 mt-3">Read more</button></a>
		</div>
		<hr>
{{else}}
	<h4>No posts registered</h4>
{{/each}}
	</div>
</div>