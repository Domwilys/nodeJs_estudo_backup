<h2>Edit post: {{postagem._id}}</h2>
{{!-- {{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}} --}}
<div class="card mt-3">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <div class="mt-3">
                <label class="mb-2" for="title">Title</label>
                <input type="text" name="title" id="title" placeholder="Post title" class="form-control" value="{{postagem.title}}" required>
            </div>
            <div class="mt-3">
                <label class="mb-2" for="slug">Slug</label>
                <input type="text" name="slug" id="slug" placeholder="Post Slug" class="form-control" value="{{postagem.slug}}" required>
            </div>
            <div class="mt-3">
                <label class="mb-2" for="description">Description</label>
                <input type="text" name="description" id="description" placeholder="Post description" class="form-control" value="{{postagem.description}}" required>
            </div>
            <div class="mt-3">
                <label class="mb-2" for="content">Content</label>
                <textarea name="content" id="content" cols="30" rows="10" class="form-control" required>{{postagem.content}}</textarea>
            </div>
            <div class="mt-3">
                <label class="mb-2" for="category">Category</label>
                <select name="category" id="category" class="form-select">
                    {{#each categorias}}
                        <option value="{{_id}}">{{name}}</option>
                    {{else}}
                        <option value="0">No category registered</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-success mt-5">Edit Post</button>
            <a href="/admin/postagens"><button type="button" class="btn btn-outline-secondary mt-5">Cancelar</button></a>
        </form>
    </div>
</div>